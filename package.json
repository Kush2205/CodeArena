{
  "name": "with-tailwind",
  "private": true,
  "scripts": {
    "build": "turbo run build",
    "dev": "turbo run dev",
    "lint": "turbo run lint",
    "check-types": "turbo run check-types",
    "format": "prettier --write \"**/*.{ts,tsx,md}\"",
    "gen-bp": "bun run apps/utils/generateBoilerplate.ts",
    "gen-bp-full": "bun run apps/utils/generateBoilerplateFull.ts",
    "seed:db" : "bun run apps/utils/seedDatabase.ts"
  },
  "devDependencies": {
    "@types/node": "^24.9.1",
    "prettier": "^3.6.0",
    "prettier-plugin-tailwindcss": "^0.6.11",
    "turbo": "^2.5.8"
  },
  "engines": {
    "node": ">=18"
  },
  "packageManager": "bun@1.3.1",
  "workspaces": [
    "apps/*",
    "packages/*"
  ]
}
