generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id          Int          @id @default(autoincrement())
  name        String
  email       String       @unique
  password    String
  role        String       @default("user") // "admin" or "user"
  createdAt   DateTime     @default(now())
  updatedAt   DateTime     @updatedAt
  submissions Submission[]
  violations  Violation[]
  disqualifications Disqualified[]
  solvedProblems      SolvedProblem[]
}

model Submission {
  id               String            @id @default(cuid())
  userId           Int
  problemId        Int
  contestId        Int?
  status           String            @default("pending")
  verdict          String?
  passedTestCases  Int               @default(0)
  totalTestCases   Int               @default(0)
  points           Int               @default(0) // 10 points per passed test case
  executionTime    Float?
  memoryUsed       Int?
  createdAt        DateTime          @default(now())
  updatedAt        DateTime          @updatedAt
  code             String?
  language         String?
  contest          Contest?          @relation(fields: [contestId], references: [id])
  problem          Problem           @relation(fields: [problemId], references: [id])
  user             User              @relation(fields: [userId], references: [id])
  submissionTokens SubmissionToken[]
 
  @@index([userId])
  @@index([problemId])
  @@index([contestId])
}

model SubmissionToken {
  token        String     @unique
  passed       Boolean    @default(false)
  status       String     @default("pending")
  submissionId String
  createdAt    DateTime   @default(now())
  id           Int        @id @default(autoincrement())
  updatedAt    DateTime   @updatedAt
  submission   Submission @relation(fields: [submissionId], references: [id], onDelete: Cascade)
}

model Problem {
  id                        Int              @id @default(autoincrement())
  name                      String           @unique
  createdAt                 DateTime         @default(now())
  updatedAt                 DateTime         @updatedAt
  boilerplateCodeC          String?
  boilerplateCodeCpp        String?
  boilerplateCodeJava       String?
  boilerplateCodeJavaScript String?
  boilerplateCodePython     String?
  contests                  ContestProblem[]
  submissions               Submission[]
  testCases                 TestCase[]
  violations                Violation[]
  solvedBy                  SolvedProblem[]
}

model TestCase {
  id        Int     @id @default(autoincrement())
  input     String
  output    String
  problemId Int
  problem   Problem @relation(fields: [problemId], references: [id])
}

model Contest {
  id          Int              @id @default(autoincrement())
  name        String           @unique
  createdAt   DateTime         @default(now())
  updatedAt   DateTime         @updatedAt
  EndTime     DateTime?
  StartTime   DateTime?
  started     Boolean          @default(false)
  problems    ContestProblem[]
  submissions Submission[]
  violations  Violation[]
  disqualified Disqualified[]
  proctoringEnabled          Boolean     @default(false)
  solvedProblems            SolvedProblem[]
}

model ContestProblem {
  contestId Int
  problemId Int
  contest   Contest @relation(fields: [contestId], references: [id])
  problem   Problem @relation(fields: [problemId], references: [id])

  @@id([contestId, problemId])
}


model Violation {
  id          Int          @id @default(autoincrement())
  userId      Int
  contestId   Int
  problemId   Int?
  violationType    String
  createdAt   DateTime     @default(now())
  updatedAt   DateTime     @updatedAt
  user        User         @relation(fields: [userId], references: [id])
  contest     Contest      @relation(fields: [contestId], references: [id])
  problem     Problem?     @relation(fields: [problemId], references: [id])
  
}

model Disqualified{
  id          Int          @id @default(autoincrement())
  userId      Int
  contestId   Int
  disqualified  Boolean     @default(false)
  disqualifiedAt DateTime?
  user        User         @relation(fields: [userId], references: [id])
  contest     Contest      @relation(fields: [contestId], references: [id])
}

model SolvedProblem {
  id         Int       @id @default(autoincrement())
  userId     Int
  problemId  Int
  contestId  Int?
  solvedAt   DateTime  @default(now())

  user       User      @relation(fields: [userId], references: [id])
  problem    Problem   @relation(fields: [problemId], references: [id])
  contest    Contest?  @relation(fields: [contestId], references: [id])

  @@unique([userId, problemId, contestId])
}

model PassedTestCase {
  id              Int      @id @default(autoincrement())
  userId          Int
  problemId       Int
  contestId       Int?
  testCaseNumber  Int
  passedAt        DateTime @default(now())

  @@unique([userId, problemId, contestId, testCaseNumber])
  @@index([userId, problemId, contestId])
}
